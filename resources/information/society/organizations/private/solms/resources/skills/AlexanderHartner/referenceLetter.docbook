  <ns17:title xmlns:ns17="http://docbook.org/ns/docbook">Reference: Alexander F. Hartner</ns17:title>
  <ns18:author xmlns:ns18="http://docbook.org/ns/docbook">
    <ns19:firstname xmlns:ns19="http://docbook.org/ns/docbook">Dr. Friedemann (Fritz)</ns19:firstname>
    <ns20:surname xmlns:ns20="http://docbook.org/ns/docbook">Solms</ns20:surname>
    <ns21:affiliation xmlns:ns21="http://docbook.org/ns/docbook">
      <ns22:address xmlns:ns22="http://docbook.org/ns/docbook">
        <ns23:email xmlns:ns23="http://docbook.org/ns/docbook">fritz@solms.co.za</ns23:email>
      </ns22:address>
