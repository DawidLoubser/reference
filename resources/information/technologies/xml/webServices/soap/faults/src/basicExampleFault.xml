<?xml version="1.0" encoding="UTF-8"?>
<soap:Envelope 
    xmlns:soap="http://schemas.xmlsoap.org/soap/envelope/"
    xmlns:cars="http://carcompany.example.org/sales">
    <soap:Body>
        <soap:Fault>
            <faultcode>soap:Client</faultcode>
            <faultstring>
                Invalid Gauteng Registration code, please
                correct and re-send.
            </faultstring>
            <faultactor>http://carcompany.example.org/sales</faultactor>
            <detail>
                <cars:invalidRegistration>
                    <offendingValue>RMX89GP</offendingValue>
                    <requiredPattern>[\a]{3}[\d]{3}GP</requiredPattern>
                </cars:invalidRegistration>
            </detail>
        </soap:Fault>
    </soap:Body>
</soap:Envelope>