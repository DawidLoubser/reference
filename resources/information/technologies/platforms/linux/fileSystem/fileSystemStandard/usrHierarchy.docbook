<!--DOCTYPE section SYSTEM "file:/usr/share/sgml/db42xml/docbookx.dtd"--><ns1721:section xmlns:ns1721="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.fileSystem.fileSystemStandard.usrHierarchy">

  <ns1722:title xmlns:ns1722="http://docbook.org/ns/docbook">The <ns1723:filename xmlns:ns1723="http://docbook.org/ns/docbook">/usr</ns1723:filename> hierarchy</ns1722:title>
  <ns1724:para xmlns:ns1724="http://docbook.org/ns/docbook">
      The <ns1725:filename xmlns:ns1725="http://docbook.org/ns/docbook">/usr</ns1725:filename> directory is the root of the second major section 
      of the file system containing sharable, read-only data. Applications should not write 
      to this directory. 
  </ns1724:para>
  <ns1726:para xmlns:ns1726="http://docbook.org/ns/docbook">
    This hierarchy may contain user commands but large software applications should be
    installed into subdirectories of <ns1727:filename xmlns:ns1727="http://docbook.org/ns/docbook">/opt</ns1727:filename> and not intu the
    <ns1728:filename xmlns:ns1728="http://docbook.org/ns/docbook">/usr</ns1728:filename> hierarchy.
  </ns1726:para>
  <ns1729:para xmlns:ns1729="http://docbook.org/ns/docbook">
    According to the FSSTND it should contain the subdirectories or symbolic links shown in    
    <ns1730:xref xmlns:ns1730="http://docbook.org/ns/docbook" linkend="resources.information.platforms.linux.fileSystem.fileSystemStandard.usrHierarchyDirs"/>.

    <ns1731:table xmlns:ns1731="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.fileSystem.fileSystemStandard.usrHierarchyDirs">
      <ns1732:title xmlns:ns1732="http://docbook.org/ns/docbook">Directories required in the <ns1733:filename xmlns:ns1733="http://docbook.org/ns/docbook">/usr</ns1733:filename>hierarchy.</ns1732:title>
      <ns1734:tgroup xmlns:ns1734="http://docbook.org/ns/docbook" cols="2">
        <ns1735:thead xmlns:ns1735="http://docbook.org/ns/docbook">
          <ns1736:row xmlns:ns1736="http://docbook.org/ns/docbook"><ns1737:entry xmlns:ns1737="http://docbook.org/ns/docbook">Directory</ns1737:entry><ns1738:entry xmlns:ns1738="http://docbook.org/ns/docbook">Description</ns1738:entry></ns1736:row>
        </ns1735:thead>
        <ns1739:tbody xmlns:ns1739="http://docbook.org/ns/docbook">
          <ns1740:row xmlns:ns1740="http://docbook.org/ns/docbook">
            <ns1741:entry xmlns:ns1741="http://docbook.org/ns/docbook"><ns1742:filename xmlns:ns1742="http://docbook.org/ns/docbook">/usr/bin</ns1742:filename></ns1741:entry>
            <ns1743:entry xmlns:ns1743="http://docbook.org/ns/docbook">
              User commands like <ns1744:command xmlns:ns1744="http://docbook.org/ns/docbook">mail</ns1744:command>, <ns1745:command xmlns:ns1745="http://docbook.org/ns/docbook">passwd</ns1745:command>
              and <ns1746:command xmlns:ns1746="http://docbook.org/ns/docbook">dos2unix</ns1746:command>.
            </ns1743:entry>
          </ns1740:row>
          <ns1747:row xmlns:ns1747="http://docbook.org/ns/docbook">
            <ns1748:entry xmlns:ns1748="http://docbook.org/ns/docbook"><ns1749:filename xmlns:ns1749="http://docbook.org/ns/docbook">/usr/include</ns1749:filename></ns1748:entry>
            <ns1750:entry xmlns:ns1750="http://docbook.org/ns/docbook">Header files for C/C++ programs.</ns1750:entry>
          </ns1747:row>
          <ns1751:row xmlns:ns1751="http://docbook.org/ns/docbook">
            <ns1752:entry xmlns:ns1752="http://docbook.org/ns/docbook"><ns1753:filename xmlns:ns1753="http://docbook.org/ns/docbook">lib</ns1753:filename></ns1752:entry>
            <ns1754:entry xmlns:ns1754="http://docbook.org/ns/docbook">Library files.</ns1754:entry>
          </ns1751:row>
          <ns1755:row xmlns:ns1755="http://docbook.org/ns/docbook">
            <ns1756:entry xmlns:ns1756="http://docbook.org/ns/docbook"><ns1757:filename xmlns:ns1757="http://docbook.org/ns/docbook">local</ns1757:filename></ns1756:entry>
            <ns1758:entry xmlns:ns1758="http://docbook.org/ns/docbook">
              Softwtware installations, <ns1759:command xmlns:ns1759="http://docbook.org/ns/docbook">man</ns1759:command> pages, libraries <ns1760:abbrev xmlns:ns1760="http://docbook.org/ns/docbook">etc.</ns1760:abbrev>
              which are to be used by local users.
            </ns1758:entry>
          </ns1755:row>
          <ns1761:row xmlns:ns1761="http://docbook.org/ns/docbook">
            <ns1762:entry xmlns:ns1762="http://docbook.org/ns/docbook"><ns1763:filename xmlns:ns1763="http://docbook.org/ns/docbook">/usr/sbin</ns1763:filename></ns1762:entry>
            <ns1764:entry xmlns:ns1764="http://docbook.org/ns/docbook">
              Non-vital system binaries like <ns1765:command xmlns:ns1765="http://docbook.org/ns/docbook">adduser</ns1765:command>,
              <ns1766:command xmlns:ns1766="http://docbook.org/ns/docbook">addgroup</ns1766:command>, <ns1767:command xmlns:ns1767="http://docbook.org/ns/docbook">addgroup</ns1767:command>,
              <ns1768:command xmlns:ns1768="http://docbook.org/ns/docbook">hwscan</ns1768:command>, <ns1769:command xmlns:ns1769="http://docbook.org/ns/docbook">exportfs</ns1769:command>
              and <ns1770:command xmlns:ns1770="http://docbook.org/ns/docbook">setclock</ns1770:command>.
            </ns1764:entry>
          </ns1761:row>
          <ns1771:row xmlns:ns1771="http://docbook.org/ns/docbook">
            <ns1772:entry xmlns:ns1772="http://docbook.org/ns/docbook"><ns1773:filename xmlns:ns1773="http://docbook.org/ns/docbook">/usr/share</ns1773:filename></ns1772:entry>
            <ns1774:entry xmlns:ns1774="http://docbook.org/ns/docbook">
              Contains architecture-indfependent data files like architecture-independent
              <ns1775:command xmlns:ns1775="http://docbook.org/ns/docbook">man</ns1775:command> pages, dictionaries, documentation including
              the <ns1776:emphasis xmlns:ns1776="http://docbook.org/ns/docbook">howto</ns1776:emphasis> pages, <ns1777:filename xmlns:ns1777="http://docbook.org/ns/docbook">/usr/share/info</ns1777:filename>
              which is the GNU Info system's primary directory, locale information, 
              message catalogs for native language support and timezone information
              and configuration.
            </ns1774:entry>
          </ns1771:row>
        </ns1739:tbody>
      </ns1734:tgroup>
      
    </ns1731:table>
    
  </ns1729:para>
</ns1721:section>