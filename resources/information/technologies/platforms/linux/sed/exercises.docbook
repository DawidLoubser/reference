<ns4851:section xmlns:ns4851="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.sed.exercises">

  <ns4852:title xmlns:ns4852="http://docbook.org/ns/docbook">Exercises</ns4852:title>
  <ns4853:para xmlns:ns4853="http://docbook.org/ns/docbook">
    Apply all the exercises to <ns4854:filename xmlns:ns4854="http://docbook.org/ns/docbook">clouds.xml</ns4854:filename> listed below:
<xi:include xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" href="source/clouds.docbook"/>    
    <ns4855:orderedlist xmlns:ns4855="http://docbook.org/ns/docbook">
      <ns4856:listitem xmlns:ns4856="http://docbook.org/ns/docbook"><ns4857:para xmlns:ns4857="http://docbook.org/ns/docbook">
        Use <ns4858:command xmlns:ns4858="http://docbook.org/ns/docbook">sed</ns4858:command> to replace <ns4859:quote xmlns:ns4859="http://docbook.org/ns/docbook">clouds</ns4859:quote>
        with <ns4860:quote xmlns:ns4860="http://docbook.org/ns/docbook">angels</ns4860:quote> throughout the document.
      </ns4857:para></ns4856:listitem>
      <ns4861:listitem xmlns:ns4861="http://docbook.org/ns/docbook"><ns4862:para xmlns:ns4862="http://docbook.org/ns/docbook">
        Use <ns4863:command xmlns:ns4863="http://docbook.org/ns/docbook">sed</ns4863:command> to replace <ns4864:quote xmlns:ns4864="http://docbook.org/ns/docbook">clouds</ns4864:quote>
        with <ns4865:quote xmlns:ns4865="http://docbook.org/ns/docbook">angels</ns4865:quote> and all <ns4866:quote xmlns:ns4866="http://docbook.org/ns/docbook">Clouds</ns4866:quote>
        with <ns4867:quote xmlns:ns4867="http://docbook.org/ns/docbook">Angels</ns4867:quote>.
      </ns4862:para></ns4861:listitem>
      <ns4868:listitem xmlns:ns4868="http://docbook.org/ns/docbook"><ns4869:para xmlns:ns4869="http://docbook.org/ns/docbook">
        Replace <ns4870:quote xmlns:ns4870="http://docbook.org/ns/docbook">clouds</ns4870:quote> with <ns4871:quote xmlns:ns4871="http://docbook.org/ns/docbook">angels</ns4871:quote> only 
        within the first 10 lines.  
      </ns4869:para></ns4868:listitem>
      <ns4872:listitem xmlns:ns4872="http://docbook.org/ns/docbook"><ns4873:para xmlns:ns4873="http://docbook.org/ns/docbook">
        Replace <ns4874:quote xmlns:ns4874="http://docbook.org/ns/docbook">clouds</ns4874:quote> only in those lines which also contain
        <ns4875:quote xmlns:ns4875="http://docbook.org/ns/docbook">grey</ns4875:quote>.
      </ns4873:para></ns4872:listitem>
      <ns4876:listitem xmlns:ns4876="http://docbook.org/ns/docbook"><ns4877:para xmlns:ns4877="http://docbook.org/ns/docbook">
        Replace <ns4878:quote xmlns:ns4878="http://docbook.org/ns/docbook">Clouds</ns4878:quote> with <ns4879:quote xmlns:ns4879="http://docbook.org/ns/docbook">Angels</ns4879:quote>  in 
        those lines where it appears as the first word of the line.
      </ns4877:para></ns4876:listitem>
      <ns4880:listitem xmlns:ns4880="http://docbook.org/ns/docbook"><ns4881:para xmlns:ns4881="http://docbook.org/ns/docbook">
        Delete all lines containing the word <ns4882:quote xmlns:ns4882="http://docbook.org/ns/docbook">water</ns4882:quote>.
      </ns4881:para></ns4880:listitem>
      <ns4883:listitem xmlns:ns4883="http://docbook.org/ns/docbook"><ns4884:para xmlns:ns4884="http://docbook.org/ns/docbook">
        Append a line containing <ns4885:quote xmlns:ns4885="http://docbook.org/ns/docbook">Viva clouds.</ns4885:quote>  
      </ns4884:para></ns4883:listitem>
      <ns4886:listitem xmlns:ns4886="http://docbook.org/ns/docbook"><ns4887:para xmlns:ns4887="http://docbook.org/ns/docbook">
        Delete all leading spaces from all lines.  
      </ns4887:para></ns4886:listitem>
    </ns4855:orderedlist>
  </ns4853:para>
</ns4851:section>