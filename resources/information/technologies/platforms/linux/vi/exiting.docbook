<!--DOCTYPE section SYSTEM "file:/opt/share/xml/Oxygen/docbook/dtd/docbookx.dtd"--><ns6427:section xmlns:ns6427="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.exiting">

  <ns6428:title xmlns:ns6428="http://docbook.org/ns/docbook">Exiting Vi</ns6428:title>
  <ns6429:para xmlns:ns6429="http://docbook.org/ns/docbook">
    To exit <ns6430:emphasis xmlns:ns6430="http://docbook.org/ns/docbook">Vi</ns6430:emphasis>, use one of the commands in 
    <ns6431:xref xmlns:ns6431="http://docbook.org/ns/docbook" linkend="resources.information.platforms.linux.vi.exitingCommands"/>
  </ns6429:para>
  <ns6432:table xmlns:ns6432="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.exitingCommands">
    <ns6433:title xmlns:ns6433="http://docbook.org/ns/docbook">Commands for exiting <ns6434:emphasis xmlns:ns6434="http://docbook.org/ns/docbook">Vim</ns6434:emphasis></ns6433:title>
    <ns6435:tgroup xmlns:ns6435="http://docbook.org/ns/docbook" cols="2">
      <ns6436:thead xmlns:ns6436="http://docbook.org/ns/docbook">
        <ns6437:row xmlns:ns6437="http://docbook.org/ns/docbook"><ns6438:entry xmlns:ns6438="http://docbook.org/ns/docbook">Command</ns6438:entry><ns6439:entry xmlns:ns6439="http://docbook.org/ns/docbook">Description</ns6439:entry></ns6437:row>
      </ns6436:thead>
      
      <ns6440:tbody xmlns:ns6440="http://docbook.org/ns/docbook">
        <ns6441:row xmlns:ns6441="http://docbook.org/ns/docbook">
          <ns6442:entry xmlns:ns6442="http://docbook.org/ns/docbook">:q</ns6442:entry>
          <ns6443:entry xmlns:ns6443="http://docbook.org/ns/docbook">Quit current buffer unless changes have been made.</ns6443:entry>
        </ns6441:row>
        <ns6444:row xmlns:ns6444="http://docbook.org/ns/docbook">
          <ns6445:entry xmlns:ns6445="http://docbook.org/ns/docbook">:wq , :x  or ZZ</ns6445:entry>
          <ns6446:entry xmlns:ns6446="http://docbook.org/ns/docbook">
            Save any changes made to the current buffer and quit the buffer and
            associated editor window.
          </ns6446:entry>
        </ns6444:row>
        <ns6447:row xmlns:ns6447="http://docbook.org/ns/docbook">
          <ns6448:entry xmlns:ns6448="http://docbook.org/ns/docbook">:wqa or :xa</ns6448:entry>
          <ns6449:entry xmlns:ns6449="http://docbook.org/ns/docbook">
            Save any changes done to any of the buffers and quit <ns6450:emphasis xmlns:ns6450="http://docbook.org/ns/docbook">Vim</ns6450:emphasis>.
          </ns6449:entry>
        </ns6447:row>
        <ns6451:row xmlns:ns6451="http://docbook.org/ns/docbook">
          <ns6452:entry xmlns:ns6452="http://docbook.org/ns/docbook">:q! or ZQ</ns6452:entry>
          <ns6453:entry xmlns:ns6453="http://docbook.org/ns/docbook">
            discard any changes to the current buffer and quit the buffer and associated editor
            window.
          </ns6453:entry>
        </ns6451:row>
        <ns6454:row xmlns:ns6454="http://docbook.org/ns/docbook">
          <ns6455:entry xmlns:ns6455="http://docbook.org/ns/docbook">:qa!</ns6455:entry>
          <ns6456:entry xmlns:ns6456="http://docbook.org/ns/docbook">
            Abandon changes made to any of the currently loaded buffers and quit
            <ns6457:emphasis xmlns:ns6457="http://docbook.org/ns/docbook">Vim</ns6457:emphasis>.
          </ns6456:entry>
        </ns6454:row>       
        <ns6458:row xmlns:ns6458="http://docbook.org/ns/docbook">
          <ns6459:entry xmlns:ns6459="http://docbook.org/ns/docbook">:conf qa</ns6459:entry>
          <ns6460:entry xmlns:ns6460="http://docbook.org/ns/docbook">
            Abandon changes made to any of the buffers and quit <ns6461:emphasis xmlns:ns6461="http://docbook.org/ns/docbook">Vim</ns6461:emphasis>, 
            but prompt for any changed buffer.
          </ns6460:entry>
        </ns6458:row>
        <ns6462:row xmlns:ns6462="http://docbook.org/ns/docbook">
          <ns6463:entry xmlns:ns6463="http://docbook.org/ns/docbook">:conf wqa</ns6463:entry>
          <ns6464:entry xmlns:ns6464="http://docbook.org/ns/docbook">
            Write changes made to any of the buffers and quit <ns6465:emphasis xmlns:ns6465="http://docbook.org/ns/docbook">Vim</ns6465:emphasis>, 
            but prompt for any changed buffer.
          </ns6464:entry>
        </ns6462:row>
      </ns6440:tbody>
    </ns6435:tgroup>
  </ns6432:table>
</ns6427:section>