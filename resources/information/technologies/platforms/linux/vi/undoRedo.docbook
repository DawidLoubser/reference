<!--DOCTYPE section SYSTEM "file:/opt/share/xml/Oxygen/docbook/dtd/docbookx.dtd"--><ns6837:section xmlns:ns6837="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.undoRedo">

  <ns6838:title xmlns:ns6838="http://docbook.org/ns/docbook">Undoing and redoing</ns6838:title>
  <ns6839:para xmlns:ns6839="http://docbook.org/ns/docbook">
    There is always room to change your mind, again and again. For this you need support for undo/redo.
  </ns6839:para>
  <ns6840:table xmlns:ns6840="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.undoRedoCommands">
    <ns6841:title xmlns:ns6841="http://docbook.org/ns/docbook">Undo/redo commands</ns6841:title>
    <ns6842:tgroup xmlns:ns6842="http://docbook.org/ns/docbook" cols="2">
      <ns6843:thead xmlns:ns6843="http://docbook.org/ns/docbook">
        <ns6844:row xmlns:ns6844="http://docbook.org/ns/docbook"><ns6845:entry xmlns:ns6845="http://docbook.org/ns/docbook">Command</ns6845:entry><ns6846:entry xmlns:ns6846="http://docbook.org/ns/docbook">Description</ns6846:entry></ns6844:row>
      </ns6843:thead>
      <ns6847:tbody xmlns:ns6847="http://docbook.org/ns/docbook">
        <ns6848:row xmlns:ns6848="http://docbook.org/ns/docbook">
          <ns6849:entry xmlns:ns6849="http://docbook.org/ns/docbook">[n]u</ns6849:entry>
          <ns6850:entry xmlns:ns6850="http://docbook.org/ns/docbook">Undo the last n (default 1) changes.</ns6850:entry>
        </ns6848:row>
        <ns6851:row xmlns:ns6851="http://docbook.org/ns/docbook">
          <ns6852:entry xmlns:ns6852="http://docbook.org/ns/docbook">[n]&lt;Ctrl&gt;r</ns6852:entry>
          <ns6853:entry xmlns:ns6853="http://docbook.org/ns/docbook">Redo the last n (default 1) undone changes.</ns6853:entry>
        </ns6851:row>
        <ns6854:row xmlns:ns6854="http://docbook.org/ns/docbook">
          <ns6855:entry xmlns:ns6855="http://docbook.org/ns/docbook">U</ns6855:entry>
          <ns6856:entry xmlns:ns6856="http://docbook.org/ns/docbook">Restore the last line.</ns6856:entry>
        </ns6854:row>
      </ns6847:tbody>
    </ns6842:tgroup>
    
  </ns6840:table>
  
