<ns6340:section xmlns:ns6340="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.changing">

  <ns6341:title xmlns:ns6341="http://docbook.org/ns/docbook">Changing text</ns6341:title>
  <ns6342:para xmlns:ns6342="http://docbook.org/ns/docbook">
    The commands for modifying existing text in <ns6343:command xmlns:ns6343="http://docbook.org/ns/docbook">vi</ns6343:command> are shown
    in <ns6344:xref xmlns:ns6344="http://docbook.org/ns/docbook" linkend="resources.information.platforms.linux.vi.changingCommands"/>.
    
    <ns6345:table xmlns:ns6345="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.changingCommands">
      <ns6346:title xmlns:ns6346="http://docbook.org/ns/docbook">Commands for changing existing text</ns6346:title>
      <ns6347:tgroup xmlns:ns6347="http://docbook.org/ns/docbook" cols="2">
        <ns6348:thead xmlns:ns6348="http://docbook.org/ns/docbook">
          <ns6349:row xmlns:ns6349="http://docbook.org/ns/docbook"><ns6350:entry xmlns:ns6350="http://docbook.org/ns/docbook">Command</ns6350:entry><ns6351:entry xmlns:ns6351="http://docbook.org/ns/docbook">Description</ns6351:entry></ns6349:row>
        </ns6348:thead>
        <ns6352:tbody xmlns:ns6352="http://docbook.org/ns/docbook">
          <ns6353:row xmlns:ns6353="http://docbook.org/ns/docbook">
            <ns6354:entry xmlns:ns6354="http://docbook.org/ns/docbook"><ns6355:command xmlns:ns6355="http://docbook.org/ns/docbook">R</ns6355:command></ns6354:entry>
            <ns6356:entry xmlns:ns6356="http://docbook.org/ns/docbook">Enter <ns6357:emphasis xmlns:ns6357="http://docbook.org/ns/docbook">replace</ns6357:emphasis> mode.</ns6356:entry>
          </ns6353:row>
          <ns6358:row xmlns:ns6358="http://docbook.org/ns/docbook">
            <ns6359:entry xmlns:ns6359="http://docbook.org/ns/docbook"><ns6360:command xmlns:ns6360="http://docbook.org/ns/docbook">gR</ns6360:command></ns6359:entry>
            <ns6361:entry xmlns:ns6361="http://docbook.org/ns/docbook">
              Enter <ns6362:emphasis xmlns:ns6362="http://docbook.org/ns/docbook">virtual replace</ns6362:emphasis> mode where each character
              you type replaces an existing character on the screen.
            </ns6361:entry>
          </ns6358:row>
          <ns6363:row xmlns:ns6363="http://docbook.org/ns/docbook">
            <ns6364:entry xmlns:ns6364="http://docbook.org/ns/docbook"><ns6365:command xmlns:ns6365="http://docbook.org/ns/docbook">[n]&gt;&gt;</ns6365:command></ns6364:entry>
            <ns6366:entry xmlns:ns6366="http://docbook.org/ns/docbook">
              Move n lines one shift-width to the right.
            </ns6366:entry>
          </ns6363:row>
        </ns6352:tbody>
      </ns6347:tgroup>
      
    </ns6345:table>
    
  </ns6342:para>
</ns6340:section>