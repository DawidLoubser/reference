<!--DOCTYPE section SYSTEM "file:/opt/share/xml/Oxygen/docbook/dtd/docbookx.dtd"--><ns6765:section xmlns:ns6765="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.searchReplace">

  <ns6766:title xmlns:ns6766="http://docbook.org/ns/docbook">Searching and replacing</ns6766:title>
  <ns6767:para xmlns:ns6767="http://docbook.org/ns/docbook">
    
  </ns6767:para>
  <ns6768:table xmlns:ns6768="http://docbook.org/ns/docbook" xml:id="resources.information.platforms.linux.vi.searchReplaceCommands">
    <ns6769:title xmlns:ns6769="http://docbook.org/ns/docbook">Search and replace commands</ns6769:title>
    <ns6770:tgroup xmlns:ns6770="http://docbook.org/ns/docbook" cols="2">
      <ns6771:thead xmlns:ns6771="http://docbook.org/ns/docbook">
        <ns6772:row xmlns:ns6772="http://docbook.org/ns/docbook"><ns6773:entry xmlns:ns6773="http://docbook.org/ns/docbook">Command</ns6773:entry><ns6774:entry xmlns:ns6774="http://docbook.org/ns/docbook">Description</ns6774:entry></ns6772:row>
      </ns6771:thead>
      <ns6775:tbody xmlns:ns6775="http://docbook.org/ns/docbook">
        <ns6776:row xmlns:ns6776="http://docbook.org/ns/docbook">
          <ns6777:entry xmlns:ns6777="http://docbook.org/ns/docbook">[n]/<ns6778:emphasis xmlns:ns6778="http://docbook.org/ns/docbook">searchPattern</ns6778:emphasis>&lt;Enter&gt;</ns6777:entry>
          <ns6779:entry xmlns:ns6779="http://docbook.org/ns/docbook">
            Search forward for the next/n'th occurance of <ns6780:emphasis xmlns:ns6780="http://docbook.org/ns/docbook">searchPattern</ns6780:emphasis>.
          </ns6779:entry>
        </ns6776:row>
        <ns6781:row xmlns:ns6781="http://docbook.org/ns/docbook">
          <ns6782:entry xmlns:ns6782="http://docbook.org/ns/docbook">[n]?<ns6783:emphasis xmlns:ns6783="http://docbook.org/ns/docbook">searchPattern</ns6783:emphasis>&lt;Enter&gt;</ns6782:entry>
          <ns6784:entry xmlns:ns6784="http://docbook.org/ns/docbook">
            Search backward for the next/n'th occurance of <ns6785:emphasis xmlns:ns6785="http://docbook.org/ns/docbook">searchPattern</ns6785:emphasis>.
          </ns6784:entry>
        </ns6781:row>
        <ns6786:row xmlns:ns6786="http://docbook.org/ns/docbook">
          <ns6787:entry xmlns:ns6787="http://docbook.org/ns/docbook">[n]/&lt;Enter&gt;</ns6787:entry>
          <ns6788:entry xmlns:ns6788="http://docbook.org/ns/docbook">Repeat last search in forward direction.</ns6788:entry>
        </ns6786:row>
        <ns6789:row xmlns:ns6789="http://docbook.org/ns/docbook">
          <ns6790:entry xmlns:ns6790="http://docbook.org/ns/docbook">[n]?&lt;Enter&gt;</ns6790:entry>
          <ns6791:entry xmlns:ns6791="http://docbook.org/ns/docbook">Repeat last search in forward direction.</ns6791:entry>
        </ns6789:row>
        <ns6792:row xmlns:ns6792="http://docbook.org/ns/docbook">
          <ns6793:entry xmlns:ns6793="http://docbook.org/ns/docbook">[n]n&lt;Enter&gt;</ns6793:entry>
          <ns6794:entry xmlns:ns6794="http://docbook.org/ns/docbook">Repeat last search.</ns6794:entry>
        </ns6792:row>
        <ns6795:row xmlns:ns6795="http://docbook.org/ns/docbook">
          <ns6796:entry xmlns:ns6796="http://docbook.org/ns/docbook">[n]N&lt;Enter&gt;</ns6796:entry>
          <ns6797:entry xmlns:ns6797="http://docbook.org/ns/docbook">Repeat last search in opposite direction.</ns6797:entry>
        </ns6795:row>
        <ns6798:row xmlns:ns6798="http://docbook.org/ns/docbook">
          <ns6799:entry xmlns:ns6799="http://docbook.org/ns/docbook">:s[range]/<ns6800:emphasis xmlns:ns6800="http://docbook.org/ns/docbook">oldText</ns6800:emphasis>/<ns6801:emphasis xmlns:ns6801="http://docbook.org/ns/docbook">newText</ns6801:emphasis></ns6799:entry>
          <ns6802:entry xmlns:ns6802="http://docbook.org/ns/docbook">
            Replace (across the specified range, otherwise once) the old text with the new text.
          </ns6802:entry>
        </ns6798:row>
      </ns6775:tbody>
    </ns6770:tgroup>
  </ns6768:table>
  
  <ns6803:table xmlns:ns6803="http://docbook.org/ns/docbook">
    <ns6804:title xmlns:ns6804="http://docbook.org/ns/docbook">Specifying the search range</ns6804:title>
    <ns6805:tgroup xmlns:ns6805="http://docbook.org/ns/docbook" cols="2">
      <ns6806:thead xmlns:ns6806="http://docbook.org/ns/docbook">
        <ns6807:row xmlns:ns6807="http://docbook.org/ns/docbook"><ns6808:entry xmlns:ns6808="http://docbook.org/ns/docbook">Range</ns6808:entry><ns6809:entry xmlns:ns6809="http://docbook.org/ns/docbook">Description</ns6809:entry></ns6807:row>
      </ns6806:thead>
      <ns6810:tbody xmlns:ns6810="http://docbook.org/ns/docbook">
        <ns6811:row xmlns:ns6811="http://docbook.org/ns/docbook">
          <ns6812:entry xmlns:ns6812="http://docbook.org/ns/docbook"><ns6813:emphasis xmlns:ns6813="http://docbook.org/ns/docbook">lineNo</ns6813:emphasis></ns6812:entry>
          <ns6814:entry xmlns:ns6814="http://docbook.org/ns/docbook">A range covering one line.</ns6814:entry>
        </ns6811:row>
        <ns6815:row xmlns:ns6815="http://docbook.org/ns/docbook">
          <ns6816:entry xmlns:ns6816="http://docbook.org/ns/docbook"><ns6817:emphasis xmlns:ns6817="http://docbook.org/ns/docbook">lineNo1</ns6817:emphasis>,<ns6818:emphasis xmlns:ns6818="http://docbook.org/ns/docbook">lineNo2</ns6818:emphasis></ns6816:entry>
          <ns6819:entry xmlns:ns6819="http://docbook.org/ns/docbook">A range between 2 lines.</ns6819:entry>
        </ns6815:row>
        <ns6820:row xmlns:ns6820="http://docbook.org/ns/docbook">
          <ns6821:entry xmlns:ns6821="http://docbook.org/ns/docbook">%</ns6821:entry>
          <ns6822:entry xmlns:ns6822="http://docbook.org/ns/docbook">The entire document.</ns6822:entry>
        </ns6820:row>
        <ns6823:row xmlns:ns6823="http://docbook.org/ns/docbook">
          <ns6824:entry xmlns:ns6824="http://docbook.org/ns/docbook"/>
        </ns6823:row>
      </ns6810:tbody>
    </ns6805:tgroup>
    
    
  </ns6803:table>
  
  
</ns6765:section>