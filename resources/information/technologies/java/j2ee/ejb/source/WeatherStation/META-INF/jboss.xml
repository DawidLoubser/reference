<?xml version="1.0" encoding="UTF-8"?>
<jboss>
  <enterprise-beans>
    <session>
      <ejb-name>WeatherStation</ejb-name>
      <jndi-name>ejb/WeatherStation</jndi-name>
    </session>
    <entity>
      <ejb-name>WeatherReading</ejb-name>
      <jndi-name>ejb/WeatherReading</jndi-name>
      <resource-ref>
        <res-ref-name>jdbc/PostgresDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <resource-name>PostgresDS</resource-name>
      </resource-ref>
    </entity>
  </enterprise-beans>
  <resource-managers>
    <resource-manager
        res-class="org.jboss.jdbc.deployment.XADataSourceLoader">
      <res-name>PostgresDS</res-name>
      <res-jndi-name>PostgresDS</res-jndi-name>
    </resource-manager>
  </resource-managers>
</jboss>
