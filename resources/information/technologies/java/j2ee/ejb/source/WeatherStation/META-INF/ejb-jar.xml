<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
  "http://java.sun.com/j2ee/dtds/ejb-jar_2_0.dtd">
<ejb-jar>
  <display-name>Weather Station</display-name>
  <enterprise-beans>
    <entity>
      <ejb-name>WeatherReading</ejb-name>
      <local-home>za.co.solms.weather.WeatherReadingLocalHome</local-home>
      <local>za.co.solms.weather.WeatherReadingLocal</local>
      <ejb-class>za.co.solms.weather.WeatherReadingBean</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>za.co.solms.weather.WeatherReadingPK</prim-key-class>
      <reentrant>False</reentrant>
      <cmp-version>2.x</cmp-version>
      <abstract-schema-name>WeatherReadingBean</abstract-schema-name>
      <cmp-field>
        <field-name>location</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>dateTime</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>temperature</field-name>
      </cmp-field>
      <query>
        <query-method>
          <method-name>findAll</method-name>
          <method-params/>
        </query-method>
        <ejb-ql>
          <![CDATA[
            SELECT OBJECT(x) FROM WeatherReadingBean x
            ]]>
        </ejb-ql>
      </query>
      <query>
        <query-method>
          <method-name>findAll</method-name>
          <method-params>
            <method-param>java.lang.String</method-param>
          </method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[
            SELECT OBJECT(x) FROM WeatherReadingBean AS x WHERE x.location = ?1
            ]]>
        </ejb-ql>
      </query>
      <query>
        <query-method>
          <method-name>findReadings</method-name>
          <method-params>
            <method-param>java.lang.String</method-param>
            <method-param>long</method-param>
            <method-param>long</method-param>
          </method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[
            SELECT OBJECT(x) FROM WeatherReadingBean AS x
              WHERE x.location = ?1 AND x.dateTime > ?2 AND x.dateTime < ?3
            ]]>
        </ejb-ql>
      </query>
      <resource-ref>
        <res-ref-name>jdbc/PostgresDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
   </entity>
    <session>
      <ejb-name>WeatherStation</ejb-name>
      <home>za.co.solms.weather.WeatherStationHome</home>
      <remote>za.co.solms.weather.WeatherStation</remote>
      <ejb-class>za.co.solms.weather.WeatherStationBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-local-ref>
        <ejb-ref-name>ejb/WeatherReading</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>za.co.solms.weather.WeatherReadingLocalHome</local-home>
        <local>za.co.solms.weather.WeatherReadingLocal</local>
        <ejb-link>WeatherReading</ejb-link>
      </ejb-local-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>WeatherReading</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
