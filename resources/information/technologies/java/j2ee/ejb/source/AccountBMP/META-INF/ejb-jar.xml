<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" 
  "http://java.sun.com/j2ee/dtds/ejb-jar_2_0.dtd">
<ejb-jar>
  <display-name>Account entity bean (BMP)</display-name>
  <enterprise-beans>
    <entity>
      <ejb-name>AccountBMP</ejb-name>
      <home>za.co.solms.finance.AccountHome</home>
      <remote>za.co.solms.finance.Account</remote>
      <ejb-class>za.co.solms.finance.AccountBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>False</reentrant>
      <resource-ref>
        <res-ref-name>jdbc/MySQLtestDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
   </entity>
    <session>
      <ejb-name>AccountsManagerBMP</ejb-name>
      <home>za.co.solms.finance.AccountsManagerHome</home>
      <remote>za.co.solms.finance.AccountsManager</remote>
      <ejb-class>za.co.solms.finance.AccountsManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-ref>
        <ejb-ref-name>ejb/AccountBMP</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <home>za.co.solms.finance.AccountHome</home>
        <remote>za.co.solms.finance.Account</remote>
        <ejb-link>AccountBMP</ejb-link>
      </ejb-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>AccountBMP</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
