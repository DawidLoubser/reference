<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
  "http://java.sun.com/j2ee/dtds/ejb-jar_2_0.dtd">
<ejb-jar>
  <enterprise-beans>
    <session>
      <ejb-name>LoanCalculator</ejb-name>
      <local-home>za.co.solms.finance.calculators.LoanCalculatorLocalHome</local-home>
      <local>za.co.solms.finance.calculators.LoanCalculatorLocal</local>
      <ejb-class>za.co.solms.finance.calculators.LoanCalculatorBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
    <session>
      <ejb-name>HomeLoanApplication</ejb-name>
      <home>za.co.solms.finance.loans.HomeLoanApplicationHome</home>
      <remote>za.co.solms.finance.loans.HomeLoanApplication</remote>
      <ejb-class>za.co.solms.finance.loans.HomeLoanApplicationBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-local-ref>
        <ejb-ref-name>ejb/LoanCalculator</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local-home>za.co.solms.finance.calculators.LoanCalculatorLocalHome</local-home>
        <local>za.co.solms.finance.calculators.LoanCalculatorLocal</local>
        <ejb-link>LoanCalculator</ejb-link>
      </ejb-local-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>LoanCalculator</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>  
 </ejb-jar>
