<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
  "http://java.sun.com/j2ee/dtds/ejb-jar_2_0.dtd">
<ejb-jar>
  <display-name>Account entity bean</display-name>
  <enterprise-beans>
    <entity>
      <ejb-name>Account</ejb-name>
      <home>za.co.solms.finance.AccountHome</home>
      <remote>za.co.solms.finance.Account</remote>
      <ejb-class>za.co.solms.finance.AccountBean</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>False</reentrant>
      <cmp-version>2.x</cmp-version>
      <abstract-schema-name>AccountBean</abstract-schema-name>
      <cmp-field>
        <field-name>id</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>name</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>balance</field-name>
      </cmp-field>
      <primkey-field>id</primkey-field>
      <resource-ref>
        <res-ref-name>jdbc/MySqlDs</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
      </resource-ref>
      <query>
        <query-method>
          <method-name>findAll</method-name>
          <method-params>java.lang.String</method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[
            SELECT OBJECT(x) FROM AccountBean AS x
            ]]>
        </ejb-ql>
      </query>
   </entity>
    <session>
      <ejb-name>AccountsManager</ejb-name>
      <home>za.co.solms.finance.AccountsManagerHome</home>
      <remote>za.co.solms.finance.AccountsManager</remote>
      <ejb-class>za.co.solms.finance.AccountsManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-ref>
        <ejb-ref-name>ejb/Account</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <home>za.co.solms.finance.AccountHome</home>
        <remote>za.co.solms.finance.Account</remote>
        <ejb-link>Account</ejb-link>
      </ejb-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>Account</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
