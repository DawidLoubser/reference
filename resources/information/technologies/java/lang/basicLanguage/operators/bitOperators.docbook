            <tbody>
                <row>
                    <entry>
                        <para>
                            <literal>~</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise complement (bitwise NOT)</para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>&amp;</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise AND </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>|</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise OR </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>Ë†</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise XOR </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>&lt;&lt;</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>shift left (sign bit not shifted) </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>&gt;&gt;</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>shift right (sign bit not shifted) </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>&gt;&gt;&gt;</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>right shift (sign bit shifted) </para>
                    </entry>
                </row>
            </tbody>
        </tgroup>
   </table>
        
