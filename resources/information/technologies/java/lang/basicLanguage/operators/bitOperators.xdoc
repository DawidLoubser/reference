                        <para>
                            <literal>~</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise complement (bitwise NOT)</para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>&amp;</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise AND </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>|</literal>
                        </para>
                    </entry>
                    <entry>
                        <para>bitwise OR </para>
                    </entry>
                </row>
                <row>
                    <entry>
                        <para>
                            <literal>Ë†</literal>
                        </para>
                    </entry>
                    <entry>
